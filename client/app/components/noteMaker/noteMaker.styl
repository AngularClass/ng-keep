@import 'jeet'

.note-maker
  center(50vw)
  height 60px
  background-color white
  border-bottom solid alpha(red, 80%) 1px

  input
    col(5/6)
    height 65px
    font-size 2rem
    padding-left 10px
    background-color transparent
    color alpha(black, 70%)
    outline none
    border none
    &:focus
      outline none
  button
    col(1/6)
    cursor pointer
    outline none
    min-height 35px
    text-align center
    border none
    font-size 1.3rem
    background-color transparent
    color alpha(black, 70%)
    text-transform capitalize
    margin-top 20px
    &:active
      background-color alpha(black, 5%)
